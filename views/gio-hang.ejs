  <script>
    //Search-bar

    $(document).ready(function() {
      $('#search-btn').click(function() {
        search();
      });
    
      $('#search-input').keypress(function(event) {
        if (event.which === 13) {
          search();
        }
      });
    
      function search() {
        var keyword = $('#search-input').val();
        // check if it includes the 'book:' keyword
        if (keyword.includes('book:')) {
          // extract book title from the search query
          var index = keyword.indexOf('book:') + 5;
          var bookTitle = keyword.substring(index);
          window.location.href = '/products/search?book=' + encodeURIComponent(bookTitle);
        } else {
        
          window.location.href = '/products/search?keyword=' + encodeURIComponent(keyword);
        }
      }
    });
    
    function redirectToCart() {
      window.location.href = "/user/gio-hang";
    }

    
    // Xác định các nút xoá trên trang
    const deleteButtons = document.querySelectorAll('.delete-btn');

    // Xử lý sự kiện click cho mỗi nút xoá
    deleteButtons.forEach(button => {
      button.addEventListener('click', () => {
        const itemContainer = button.closest('.media-line-item');
        const itemId = itemContainer.getAttribute('data-id'); // Lấy ID của sản phẩm
        console.log(itemId);
        // Gửi yêu cầu xoá sản phẩm lên máy chủ
        fetch(`/user/delete-product/${itemId}`, {
          method: 'POST',
        })
          .then(response => {
            // Xử lý phản hồi từ máy chủ
            // Ví dụ: Cập nhật lại giao diện sau khi xoá sản phẩm
            itemContainer.remove(); // Xoá phần tử sản phẩm khỏi giao diện
          })
          .catch(error => {
            // Xử lý lỗi
          });
      });
    });



    function updateQuantity(index, newQuantity) {
      // Tìm phần tử input quantity tương ứng
      const quantityInput = document.querySelectorAll(".line-item-qty")[index];
      // Cập nhật giá trị quantity trong input
      quantityInput.value = newQuantity;
    
      // Cập nhật giá trị tổng tiền tương ứng
      const totalElement = document.querySelectorAll(".line-item-total")[index];
      const price = bookDetails[index].price * newQuantity;
      totalElement.textContent = price.toLocaleString("en-US") + " ₫";
    }

    // Lấy tất cả các nút "Trừ" và "Cộng"
    const minusButtons = document.querySelectorAll(".qtyminus");
    const plusButtons = document.querySelectorAll(".qtyplus");
    minusButtons.forEach((button, index) => {
      button.addEventListener("click", () => {
        if (cartItems[index].quantity > 1) {
          cartItems[index].quantity--;
          updateQuantity(index, cartItems[index].quantity);
        }
      });
    });

    plusButtons.forEach((button, index) => {
      button.addEventListener("click", () => {

        cartItems[index].quantity++;
        updateQuantity(index, cartItems[index].quantity);
      });
    });

   
    const totalElements = document.getElementsByClassName("line-item-total");

    let totalPrice = 0;
    for (let i = 0; i < totalElements.length; i++) {
      const price = parseInt(totalElements[i].textContent.replace(/\D/g, ""));
      totalPrice += price;
    }

    console.log(totalPrice);
    document.getElementById("totalPrice").innerHTML = totalPrice.toLocaleString('en-US')+ "₫";


