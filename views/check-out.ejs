    function updateQuantity(index, newQuantity) {
      // Tìm phần tử input quantity tương ứng
      const quantityInput = document.querySelectorAll(".line-item-qty")[index];
      // Cập nhật giá trị quantity trong input
      quantityInput.value = newQuantity;
    
      // Cập nhật giá trị tổng tiền tương ứng
      const totalElement = document.querySelectorAll(".line-item-total")[index];
      const price = bookDetails[index].price * newQuantity;
      totalElement.textContent = price.toLocaleString("en-US") + " ₫";
    }

    // Lấy tất cả các nút "Trừ" và "Cộng"
    const minusButtons = document.querySelectorAll(".qtyminus");
    const plusButtons = document.querySelectorAll(".qtyplus");
    minusButtons.forEach((button, index) => {
      button.addEventListener("click", () => {
        if (cartItems[index].quantity > 1) {
          cartItems[index].quantity--;
          updateQuantity(index, cartItems[index].quantity);
        }
      });
    });

    plusButtons.forEach((button, index) => {
      button.addEventListener("click", () => {

        cartItems[index].quantity++;
        updateQuantity(index, cartItems[index].quantity);
      });
    });

   
    const totalElements = document.getElementsByClassName("price");

    let totalPrice = 0;
    for (let i = 0; i < totalElements.length; i++) {
      const price = parseInt(totalElements[i].textContent.replace(/\D/g, ""));
      totalPrice += price;
    }

    console.log(totalPrice);
