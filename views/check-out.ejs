    // Lắng nghe sự kiện submit của biểu mẫu
document.getElementById('checkout-form').addEventListener('submit', function(event) {
  // Ngăn chặn hành vi mặc định của biểu mẫu
  event.preventDefault();

  // Kiểm tra xem đã nhấn nút submit hay chưa
  if (event.submitter.value === 'Continue to checkout') {
    // Lấy dữ liệu từ các trường nhập liệu
    const formData = new FormData(event.target);
    const totalPrice = document.getElementById("totalPrice").textContent.replace(/\D/g, "");
    const bookIds = Array.from(document.querySelectorAll('.book-id')).map(span => span.textContent);
    const quantities = Array.from(document.querySelectorAll('.book-quantity')).map(span => parseInt(span.textContent));
    const prices = Array.from(document.querySelectorAll('.book-price')).map(span => parseFloat(span.textContent));

    const data = Object.fromEntries(formData.entries());
    data.totalPrice = totalPrice;
    data.bookIds = bookIds;
    data.quantities = quantities;
    data.prices = prices;
    console.log(data);
    // Gửi yêu cầu POST đến máy chủ
    fetch('/user/check-out', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data)
    })
      .then(response => {
        if (response.ok) {
          // Thực hiện các hành động sau khi gửi thành công
          alert("ĐẶT HÀNG THÀNH CÔNG");
          window.location.href = "/";
        } else {
          console.error('Error sending data');
        }
      })
      .catch(error => {
        console.error('Error sending data', error);
      });
  }
});

